{% if page.topbar %}
    <div class="topbar">
        <div class="topbar-wrapper">
            <div class="topbar-content">
                <div class="topbar-left">
                    <div class="content-inner">
                        {{ page.topbar }}
                    </div>
                </div>
                <div class="topbar-right">
                    <div class="content-inner">
                        {% if page.search %}
                            <div class="gva-search-region search-region">
                                <span class="icon"><i class="fi flaticon-magnifying-glass"></i></span>
                                <div class="search-content">
                                    {{ page.search }}
                                </div>
                            </div>
                        {% endif %}
                        {% if logged_in %}
                            <div class="gva-user-region user-region">
                     <span class="icon">
                        {% if user_picture %}
                            <img src="{{ file_url(user_picture) }}" alt=""/>
                        {% else %}
                            <i class="fa fa-user"></i>
                        {% endif %}
                     </span>
                                <div class="user-content">
                                    {% if custom_account %}
                                        <div class="account-message">{{ custom_account|raw }}</div>
                                    {% endif %}
                                    <ul class="user-links">
                                        {% if custom_account %}
                                            <li><a href="/node/add/listing">{{ '+ Add Member'|t }}</a></li>
                                            <li><a href="{{ path('user.page') }}">{{ '+ My Account'|t }}</a></li>
                                            <li><a href="{{ path('user.logout') }}">{{ '+ Logout'|t }}</a></li>
                                        {% else %}
                                            <li><a href="{{ path('user.login') }}">{{ '+ Login'|t }}</a></li>
                                            {# <li><a href="{{ path('user.register') }}">{{ '+ Register'|t }}</a></li> #}
                                        {% endif %}
                                    </ul>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}